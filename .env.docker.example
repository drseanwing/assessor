# REdI Assessment System - Docker Environment
# Copy this file to .env.docker and fill in the values

# Database password (REQUIRED - use a strong password)
DB_PASSWORD=

# JWT secret (REQUIRED - minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Supabase anon key (JWT signed with your JWT_SECRET)
# Role: web_anon, issuer: redi-assessment
SUPABASE_ANON_KEY=

# Frontend port (default: 7385)
FRONTEND_PORT=7385

# REdI API URLs (optional - leave blank if not using REdI integration)
REDI_API_BASE_URL=
REDI_PARTICIPANT_LOOKUP_URL=
REDI_EVENT_AVAILABILITY_URL=
REDI_FACULTY_AVAILABILITY_URL=
REDI_PARTICIPANT_UPSERT_URL=
REDI_EVENT_UPSERT_URL=
REDI_SEND_EMAIL_URL=
REDI_CALENDAR_EVENT_URL=
REDI_EMAIL_CERTIFICATE_URL=

# Report email recipient
REPORT_EMAIL_TO=redi@health.qld.gov.au
