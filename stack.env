# =============================================================================
# REdI Assessment System - Portainer Stack Environment Variables
# =============================================================================
# Copy these into Portainer's "Environment variables" section when deploying,
# or load as a .env file via the "Load variables from .env file" option.
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - Must be set before first deployment
# -----------------------------------------------------------------------------

# Database password for PostgreSQL (redi_admin user and authenticator role)
# IMPORTANT: Set BEFORE first deploy. Changing later requires DB volume recreation.
DB_PASSWORD=redi_secret_change_me

# JWT secret for PostgREST and worker authentication (minimum 32 characters)
# Generate with: openssl rand -base64 48
JWT_SECRET=super-secret-jwt-token-for-redi-assessment-minimum-32-chars

# Frontend port (the port users access in their browser)
FRONTEND_PORT=7385

# -----------------------------------------------------------------------------
# OPTIONAL - REdI API Integration (leave empty for standalone use)
# -----------------------------------------------------------------------------

# Base URL for REdI Power Automate / Logic Apps endpoints
REDI_API_BASE_URL=https://prod-xx.australiaeast.logic.azure.com

# Individual Logic App HTTP trigger URLs (with SAS tokens)
REDI_PARTICIPANT_LOOKUP_URL=
REDI_EVENT_AVAILABILITY_URL=
REDI_FACULTY_AVAILABILITY_URL=
REDI_PARTICIPANT_UPSERT_URL=
REDI_EVENT_UPSERT_URL=
REDI_SEND_EMAIL_URL=
REDI_CALENDAR_EVENT_URL=
REDI_EMAIL_CERTIFICATE_URL=

# Email address for generated reports
REPORT_EMAIL_TO=redi@health.qld.gov.au
